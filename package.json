{
	"name": "pcli",
	"type": "module",
	"scripts": {
		"build": "tsc -p tsconfig.json",
		"build:bin": "npm run build; npm run prepack:webpack; npm run prepack:pkg;",
		"start": "ts-node-esm src/index.ts",
		"dev": "tsc-watch --noClear -p tsconfig.json",
		"prepack:esbuild": "npx esbuild dist/src/index.js  --bundle --outfile=dist/index.build.js --format=esm --platform=node --banner:js=\"import {createRequire} from 'module'; const require = createRequire(import.meta.url); import { dirname } from 'path'; import { fileURLToPath } from 'url'; const __dirname = dirname(fileURLToPath(import.meta.url));\"",
		"prepack:babel": "npx babel dist/src -d dist/babel",
		"prepack:webpack": "npx webpack --config webpack.config.cjs",
		"prepack:pkg": "npx pkg --options '--no-warnings' ./dist/webpack/main.js --out-path ./bin -C Brotli"
	},
	"dependencies": {
		"axios": "^0.27.2",
		"chai": "^4.3.7",
		"chalk": "^5.2.0",
		"commander": "^9.4.0",
		"content-type": "^1.0.4",
		"dotenv": "^16.0.1",
		"enquirer": "^2.3.6",
		"lodash": "^4.17.21",
		"newman": "^5.3.2",
		"open-editor": "^4.0.0",
		"postman-collection": "^4.1.5",
		"tmp": "^0.2.1",
		"winston": "^3.8.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.18.10",
		"@babel/core": "^7.18.10",
		"@types/chai": "^4.3.4",
		"@types/content-type": "^1.1.5",
		"@types/lodash": "^4.14.182",
		"@types/newman": "^5.3.1",
		"@types/postman-collection": "^3.5.7",
		"@types/tmp": "^0.2.3",
		"express": "^4.18.2",
		"pkg": "^5.8.0",
		"tsc-watch": "^5.0.3",
		"typescript": "^4.7.4",
		"webpack": "^5.74.0"
	}
}
